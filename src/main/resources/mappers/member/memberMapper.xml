<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.dbinc.com.web.repository.member.MemberMyBatisRepository">
    <insert id="createMember" parameterType="MemberCreate">
        INSERT INTO MEMBER(CITY,
                           STREET,
                           ZIPCODE,
                           PHONE_NUMBER,
                           NAME)
        VALUES(#{city},
               #{street},
               #{zipcode},
               #{phoneNumber},
               #{name})
    </insert>

    <select id="isExistMember" parameterType="String">
        SELECT EXISTS (SELECT 1
                       FROM MEMBER
                       WHERE name = #{name})
    </select>
</mapper>