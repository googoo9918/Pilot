<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.dbinc.com.web.repository.member.MemberMyBatisRepository">
    <insert id="createMember" parameterType="MemberCreate" useGeneratedKeys="true" keyProperty="memberId">
        INSERT INTO MEMBER(CITY,
                           STREET,
                           ZIPCODE,
                           PHONE_NUMBER,
                           NAME)
        VALUES(#{city},
               #{street},
               #{zipcode},
               #{phoneNumber},
               #{name})
    </insert>

    <select id="isExistMember" parameterType="String">
        SELECT EXISTS (SELECT 1
                       FROM MEMBER
                       WHERE name = #{name})
    </select>

    <select id="findMemberList" resultType="MemberQueryResponse">
        SELECT MEMBER_ID,
               CITY,
               STREET,
               ZIPCODE,
               PHONE_NUMBER,
               NAME
        FROM MEMBER
    </select>

    <select id="selectMemberById" parameterType="Long" resultType="MemberQueryResponse">
        SELECT MEMBER_ID,
               CITY,
               STREET,
               ZIPCODE,
               PHONE_NUMBER,
               NAME
        FROM MEMBER
        WHERE MEMBER_ID = #{memberId}
    </select>
</mapper>